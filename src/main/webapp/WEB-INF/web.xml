<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
         version="2.5">
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>secureAll</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
      <servlet-name>welcome</servlet-name>
      <servlet-class>com.gracie.barra.school.action.WelcomeServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>welcome</servlet-name>
      <url-pattern>/welcome</url-pattern>
    </servlet-mapping>       
    <servlet>
      <servlet-name>schoolCriteriaRest</servlet-name>
      <servlet-class>com.gracie.barra.school.action.SchoolCriteriaRestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>schoolCriteriaRest</servlet-name>
      <url-pattern>/api/schoolCriteria</url-pattern>
    </servlet-mapping>   
    <servlet>
      <servlet-name>schoolCriteria</servlet-name>
      <servlet-class>com.gracie.barra.school.action.SchoolCriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>schoolCriteria</servlet-name>
      <url-pattern>/schoolCriteria</url-pattern>
    </servlet-mapping>    
    <servlet>
      <servlet-name>school</servlet-name>
      <servlet-class>com.gracie.barra.school.action.SchoolServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>school</servlet-name>
      <url-pattern>/school</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>documents</servlet-name>
      <servlet-class>com.gracie.barra.school.action.DocumentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>documents</servlet-name>
      <url-pattern>/documents</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>admission</servlet-name>
      <servlet-class>com.gracie.barra.school.action.AdmissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>admission</servlet-name>
      <url-pattern>/admission</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>schoolEvents</servlet-name>
      <servlet-class>com.gracie.barra.school.action.SchoolEventsServlet</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>schoolEvents</servlet-name>
		<url-pattern>/events</url-pattern>
		<url-pattern>/eventsDelete</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>sandbox</servlet-name>
      <servlet-class>com.gracie.barra.school.action.SandboxServlet</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>sandbox</servlet-name>
		<url-pattern>/sandbox</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>criteria</servlet-name>
      <servlet-class>com.gracie.barra.admin.actions.CriteriaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>criteria</servlet-name>
      <url-pattern>/admin/criteria</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>criteriaAdmin</servlet-name>
      <servlet-class>com.gracie.barra.admin.actions.SchoolCriteriaAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>criteriaAdmin</servlet-name>
      <url-pattern>/admin/schoolCriteriaAdmin</url-pattern>
      <url-pattern>/admin/schoolCriteriaAdmin/*</url-pattern>
      <url-pattern>/admin/schoolCriteriaAdminRefuse</url-pattern>
      <url-pattern>/admin/schoolCriteriaAdminValidate</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>criterion</servlet-name>
      <servlet-class>com.gracie.barra.admin.actions.CriterionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>criterion</servlet-name>
      <url-pattern>/admin/criterion</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>schools</servlet-name>
      <servlet-class>com.gracie.barra.admin.actions.SchoolsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>schools</servlet-name>
      <url-pattern>/admin/schools</url-pattern>
    </servlet-mapping>    
    <servlet>
      <servlet-name>adminEvents</servlet-name>
      <servlet-class>com.gracie.barra.admin.actions.AdminEventsServlet</servlet-class>
    </servlet>
	<servlet-mapping>
		<servlet-name>adminEvents</servlet-name>
		<url-pattern>/admin/events</url-pattern>
		<url-pattern>/admin/eventsDelete</url-pattern>
		<url-pattern>/admin</url-pattern>
		<url-pattern>/admin/</url-pattern>
	</servlet-mapping>


    <filter>
      <filter-name>ErrorFilter</filter-name>
      <filter-class>com.gracie.barra.util.ErrorFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>ErrorFilter</filter-name>
      <url-pattern>/welcome</url-pattern>
      <url-pattern>/login</url-pattern>
      <url-pattern>/logout</url-pattern>
      <url-pattern>/schoolCriteria</url-pattern>
      <url-pattern>/api/schoolCriteria</url-pattern>
      <url-pattern>/school</url-pattern>
      <url-pattern>/events</url-pattern>
      <url-pattern>/documents</url-pattern>
      <url-pattern>/admission</url-pattern>
      <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
      <filter-name>authFilter</filter-name>
      <filter-class>com.gracie.barra.auth.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>authFilter</filter-name>
      <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
      <filter-name>AuthEnrichFilter</filter-name>
      <filter-class>com.gracie.barra.auth.AuthEnrichFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>AuthEnrichFilter</filter-name>
      <url-pattern>/welcome</url-pattern>
      <url-pattern>/schoolCriteria</url-pattern>
      <url-pattern>/api/schoolCriteria</url-pattern>
      <url-pattern>/school</url-pattern>
      <url-pattern>/documents</url-pattern>
      <url-pattern>/admission</url-pattern>
    </filter-mapping>
	<filter>
		<filter-name>charsetEncoding</filter-name>
		<filter-class>com.gracie.barra.util.CharsetEncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>charsetEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
    <filter>
      <filter-name>LogoutFilter</filter-name>
      <filter-class>com.gracie.barra.auth.LogoutFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>LogoutFilter</filter-name>
      <url-pattern>/logout</url-pattern>
    </filter-mapping>
    <servlet>
      <servlet-name>logout</servlet-name>
      <servlet-class>com.gracie.barra.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>logout</servlet-name>
      <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
      <servlet-name>login</servlet-name>
      <servlet-class>com.gracie.barra.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>login</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>
